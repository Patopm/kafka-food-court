{
  "name": "kafka-food-court",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "dev:client": "turbo run dev --filter=client-app",
    "dev:kitchen": "turbo run dev --filter=kitchen-app",
    "dev:dashboard": "turbo run dev --filter=dashboard"
  },
  "devDependencies": {
    "@types/uuid": "^11.0.0",
    "prettier": "^3.7.4",
    "turbo": "^2.8.10",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "lucide-react": "^0.575.0",
    "recharts": "^3.7.0",
    "uuid": "^13.0.0"
  }
}
